# Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=IBQ QR Code Generator
APP_VERSION=1.0.0
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# QR Code Settings
DEFAULT_QR_SIZE=10
DEFAULT_BORDER=4
DEFAULT_ERROR_CORRECTION=H
OUTPUT_DIRECTORY=output

# Database Settings (Optional)
DATABASE_URL=sqlite:///./qr_codes.db

# Cache Settings
ENABLE_CACHE=True
CACHE_EXPIRY_SECONDS=3600

# File Upload Limits
MAX_LOGO_SIZE_MB=5
ALLOWED_LOGO_FORMATS=png,jpg,jpeg
